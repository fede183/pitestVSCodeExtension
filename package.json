{
	"name": "pitest",
	"displayName": "PITest",
	"description": "Simple extension for the use of pitests mutation testing program",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.pitest"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.pitest",
				"title": "Pitest Extension"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Pitest Configuration",
			"properties": {
				"saveResult.value": {
					"type": "string",
					"default": null,
					"description": "Specifies the file path where the output will be saved as a content in a text file.",
					"scope": "resource"
				},
				"mavenExecution.value": {
					"type": "string",
					"default": null,
					"description": "Specifies the maven directory, if is empty will use MAVEN_HOME.",
					"scope": "resource"
				},
				"withHistory.value": {
					"type": "boolean",
					"default": false,
					"description": "To speed-up repeated analysis of the same codebase set the withHistory parameter to true.",
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"mocha": "^6.1.4"
	}
}
